<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

	<changeSet author="rcharre" id="update_element_result">
	    <addColumn tableName="element_result">
			<column name="tag" type="varchar(30)"/>
			<column name="size" type="int" defaultValue="-1"/>
			<column name="weight" type="int" defaultValue="-1"/>
			<column name="ratio" type="decimal" defaultValue="-1"/>
		</addColumn>

		<rollback>
			<dropColumn tableName="element_result">
				<column name="tag"/>
				<column name="size"/>
				<column name="weight"/>
				<column name="ratio"/>
			</dropColumn>
		</rollback>
	</changeSet>

</databaseChangeLog>