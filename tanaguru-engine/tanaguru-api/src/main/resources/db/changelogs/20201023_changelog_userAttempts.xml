<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

     <changeSet id="createuser_attempts" author="lpedrau">
        <createTable tableName="user_attempts">
            <column name="id" type="bigint" autoIncrement="true"/>
            <column name="username" type="varchar(50)" />
            <column name="attempts" type="int unsigned" defaultValueNumeric="0"/>
            <column name="last_modified" type="timestamp"/>
        </createTable>

        <addPrimaryKey tableName="user_attempts" columnNames="id" constraintName="pk_user_attempts"/>
        <addNotNullConstraint tableName="user_attempts" columnName="username"/>
		<addNotNullConstraint tableName="user_attempts" columnName="attempts"/>
			
        <rollback>
            <dropTable tableName="user_attempts"/>
        </rollback>
    </changeSet>

</databaseChangeLog>